import pandas as pd
import plotly.express as px
import streamlit as st

# Load cleaned dataset
df = pd.read_csv('data/trending_topics_clean.csv')
df['date'] = pd.to_datetime(df['date'])

# Streamlit setup
st.title("Global Trending Topics Interactive Dashboard")
st.sidebar.header("Filters")

# Sidebar filters
selected_region = st.sidebar.multiselect("Select Region(s)", df['region'].unique(), default=['Global'])
selected_category = st.sidebar.multiselect("Select Category(s)", df['category'].unique(), default=df['category'].unique())
selected_platform = st.sidebar.multiselect("Select Platform(s)", df['platform'].unique(), default=df['platform'].unique())

# Filter dataframe
filtered_df = df[
    (df['region'].isin(selected_region)) &
    (df['category'].isin(selected_category)) &
    (df['platform'].isin(selected_platform))
]

# Line Chart: Trend Evolution
st.subheader("Trend Evolution Over Time")
avg_trends = filtered_df.groupby(['date','category'])['trend_score'].mean().reset_index()
fig1 = px.line(avg_trends, x='date', y='trend_score', color='category', title="Average Trend Score by Category Over Time")
st.plotly_chart(fig1, use_container_width=True)

# Bar Chart: Top 10 Topics
st.subheader("Top 10 Topics by Average Trend Score")
top_topics = filtered_df.groupby('topic')['trend_score'].mean().sort_values(ascending=False).head(10).reset_index()
fig2 = px.bar(top_topics, x='topic', y='trend_score', color='trend_score', title="Top 10 Topics")
st.plotly_chart(fig2, use_container_width=True)

# Heatmap: Weekly Trend Score by Category
st.subheader("Weekly Trend Heatmap by Category")
filtered_df['week'] = filtered_df['date'].dt.isocalendar().week
pivot = filtered_df.groupby(['week','category'])['trend_score'].mean().unstack()
fig3 = px.imshow(pivot.T, labels=dict(x="Week", y="Category", color="Avg Trend Score"), aspect="auto", text_auto=True, title="Weekly Trend Heatmap")
st.plotly_chart(fig3, use_container_width=True)
