# This notebook generates the simulated trending topics dataset
# for your Data Visualization project.

import pandas as pd
import numpy as np

# Set random seed for reproducibility
np.random.seed(42)

# -------------------------------
# Dataset parameters
# -------------------------------
weeks = pd.date_range(start='2023-01-01', end='2025-12-31', freq='W')
categories = ['Tech', 'Entertainment', 'Politics', 'Health', 'Sports', 'Lifestyle']
regions = ['Global', 'US', 'Europe', 'Asia', 'Africa', 'South America']
platforms = ['Twitter', 'Google', 'YouTube', 'Reddit', 'Instagram']

# Generate rows
data = []
for week in weeks:
    for category in categories:
        for region in regions:
            for platform in platforms:
                topic = f"{category}_Topic_{np.random.randint(1,10)}"
                trend_score = np.random.randint(0, 101)
                data.append([week, topic, category, region, trend_score, platform])

# Create DataFrame
df = pd.DataFrame(data, columns=['date','topic','category','region','trend_score','platform'])

# Save CSV
df.to_csv('data/trending_topics.csv', index=False)
print("Dataset generated and saved as 'data/trending_topics.csv'.")
