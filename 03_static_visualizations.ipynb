import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load cleaned dataset
df = pd.read_csv('data/trending_topics_clean.csv')
df['date'] = pd.to_datetime(df['date'])

# 1. Trend Evolution by Category
category_trends = df.groupby(['date','category'])['trend_score'].mean().reset_index()
plt.figure(figsize=(12,6))
sns.lineplot(data=category_trends, x='date', y='trend_score', hue='category', marker='o')
plt.title("Average Trend Score by Category Over Time")
plt.ylabel("Trend Score")
plt.xlabel("Date")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# 2. Top Categories (Bar Chart)
avg_category = df.groupby('category')['trend_score'].mean().sort_values(ascending=False)
plt.figure(figsize=(8,5))
sns.barplot(x=avg_category.index, y=avg_category.values, palette='viridis')
plt.title("Average Trend Score by Category")
plt.ylabel("Trend Score")
plt.xlabel("Category")
plt.show()

# 3. Trend Score Distribution
plt.figure(figsize=(8,5))
sns.histplot(df['trend_score'], bins=30, kde=True, color='skyblue')
plt.title("Distribution of Trend Scores")
plt.xlabel("Trend Score")
plt.show()

# 4. Weekly Trend Heatmap by Category
df['week'] = df['date'].dt.isocalendar().week
pivot = df.groupby(['week','category'])['trend_score'].mean().unstack()
plt.figure(figsize=(10,6))
sns.heatmap(pivot.T, cmap='YlGnBu', annot=True, fmt=".1f")
plt.title("Weekly Trend Score Heatmap by Category")
plt.xlabel("Week")
plt.ylabel("Category")
plt.show()
