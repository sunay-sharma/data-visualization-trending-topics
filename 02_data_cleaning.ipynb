# Load libraries
import pandas as pd

# Load generated dataset
df = pd.read_csv('data/trending_topics.csv')

# Convert 'date' to datetime
df['date'] = pd.to_datetime(df['date'])

# Remove duplicates
df = df.drop_duplicates()

# Ensure trend_score is between 0 and 100
df['trend_score'] = df['trend_score'].clip(0, 100)

# Feature engineering: year, month, week
df['year'] = df['date'].dt.year
df['month'] = df['date'].dt.month
df['week'] = df['date'].dt.isocalendar().week

# Save cleaned dataset
df.to_csv('data/trending_topics_clean.csv', index=False)
print("Cleaned dataset saved as 'data/trending_topics_clean.csv'.")
